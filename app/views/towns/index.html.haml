%h1 Listing towns

%table
  %thead
    %tr
      %th Name
      %th Population
      %th Area
      %th
      %th
      %th

  %tbody
    - @towns.each do |town|
      %tr
        %td= town.name
        %td= town.population
        %td= town.area
        %td= link_to 'Show', town
        %td= link_to 'Edit', edit_town_path(town)
        %td= link_to 'Destroy', town, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

